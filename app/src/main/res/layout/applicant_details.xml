<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView2"
        android:textAlignment="center"
        style="@style/textHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Applicant Details"
        />

    <TableLayout
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">
        <TableRow
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/applicantlabel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_applicantname"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/applicant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dhanraj"
                android:textSize="16sp"
                />
        </TableRow>
        <TableRow
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/fathername_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_fathername"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/father_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wamanrao"
                android:textSize="16sp" />
        </TableRow>
        <TableRow
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="735322656"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="16sp"/>
            <TextView
                android:layout_weight="0.6"
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="16sp"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>