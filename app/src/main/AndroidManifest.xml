<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.covert.verify360">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />
    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".VerifyApp"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:theme="@style/LoginScreen" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden" />

        <activity
            android:name=".CaseBusinessVerificationActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            >

        </activity>

        <activity
            android:name=".CasePaySlipVerificationActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            >

        </activity>

        <activity
            android:name=".CaseResidentVerificationActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:configChanges="orientation|keyboard|keyboardHidden">

        </activity>

        <activity
            android:name=".CameraActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".MapsActivity">

        </activity>


        <provider
            android:name=".NewContentProvider"
            android:authorities="com.covert.verify360"
            android:exported="true" />

        <receiver android:name=".NetworkChangleReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"
                    tools:ignore="BatteryLife" />
            </intent-filter>
        </receiver>

    </application>

</manifest>