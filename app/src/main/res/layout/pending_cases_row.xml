<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pCase_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Case ID : 10010"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pActivity_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Activity_ID : 100012"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/pCase_id"
            app:layout_constraintStart_toStartOf="@+id/pCase_id"
            app:layout_constraintTop_toBottomOf="@+id/pCase_id" />

        <TextView
            android:id="@+id/pCustomer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Name : Abhilash"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/pActivity_id"
            app:layout_constraintStart_toStartOf="@+id/pActivity_id"
            app:layout_constraintTop_toBottomOf="@+id/pActivity_id" />

        <TextView
            android:id="@+id/pActivity_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Activity type"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/pCustomer_name"
            app:layout_constraintStart_toStartOf="@+id/pCustomer_name"
            app:layout_constraintTop_toBottomOf="@+id/pCustomer_name" />

        <TextView
            android:id="@+id/pMobile_Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mobile : 1321341313"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/pActivity_type"
            app:layout_constraintStart_toStartOf="@+id/pActivity_type"
            app:layout_constraintTop_toBottomOf="@+id/pActivity_type" />

        <TextView
            android:id="@+id/pAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Address : mdfvbjdfbsjbs"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/pMobile_Number"
            app:layout_constraintStart_toStartOf="@+id/pMobile_Number"
            app:layout_constraintTop_toBottomOf="@+id/pMobile_Number" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <Button
            android:id="@+id/buttonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_bg"
            android:text="Start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pAddress" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>