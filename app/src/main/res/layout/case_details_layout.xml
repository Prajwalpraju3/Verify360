<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textAlignment="center"
        android:id="@+id/textView2"
        style="@style/textHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Case Details"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">
        <TableRow
            android:layout_marginBottom="5dp">
            <TextView
                android:textSize="14sp"
                android:id="@+id/caseid_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/label_caseid"
                />
            <TextView
                android:textSize="16sp"
                android:id="@+id/case_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="10001"
                />
        </TableRow>
        <TableRow
            android:layout_marginBottom="5dp">
            <TextView
                android:textSize="14sp"
                android:id="@+id/activityid_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_activityid"
                />
            <TextView
                android:textSize="16sp"
                android:id="@+id/activity_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10001"
                />
        </TableRow>
        <TableRow
            android:layout_marginBottom="5dp">
            <TextView
                android:textSize="14sp"
                android:id="@+id/prepost_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_prepost"
                />
            <TextView
                android:textSize="16sp"
                android:id="@+id/pre_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10001"
                />
        </TableRow>
        <TableRow
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Client"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HDFC"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Type"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/product_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HDFC"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/activity_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Residential Verification"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:text="Company"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/company_name"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:text="INFOSYS"
                android:textSize="16sp"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>