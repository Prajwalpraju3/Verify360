<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_marginRight="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newcases_layout"
                app:cardElevation="2dp"
                app:cardCornerRadius="3dp">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rect_plain">
                    <TextView
                        android:id="@+id/tv_opencases"
                        android:text="100"
                        android:textSize="34dp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:background="#e2e2e2"
                        android:text="ASSIGNED CASES"
                        android:textSize="14sp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:tint="@color/colorAccent"
                        android:padding="10dp"
                        android:layout_gravity="right"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_add_to_queue_black_24dp"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginRight="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pendingCases_layout"
                app:cardElevation="2dp"
                app:cardCornerRadius="3dp">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rect_plain">
                    <TextView
                        android:id="@+id/tv_acceptcases"
                        android:text="100"
                        android:textSize="34dp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:background="#e2e2e2"
                        android:text="ACCEPTED CASES"
                        android:textSize="14sp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:tint="@color/colorAccent"
                        android:padding="10dp"
                        android:layout_gravity="right"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_event_note_black_24dp"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginRight="30px"
                android:layout_width="wrap_content"
                android:id="@+id/cancelledCases_layout"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rect_plain">
                    <TextView
                        android:id="@+id/tv_rejectedcases"
                        android:text="100"
                        android:textSize="34dp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:background="#e2e2e2"
                        android:text="CANCELLED CASES"
                        android:textSize="14sp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:tint="@color/colorAccent"
                        android:padding="10dp"
                        android:layout_gravity="right"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_event_busy_black_24dp"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginRight="30px"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rect_plain">
                    <TextView
                        android:id="@+id/tv_cancelcases"
                        android:text="100"
                        android:textSize="34dp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:background="#e2e2e2"
                        android:text="REJECTED CASES"

                        android:textSize="14sp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:tint="@color/colorAccent"
                        android:padding="10dp"
                        android:layout_gravity="right"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_event_busy_black_24dp"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_marginRight="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/completedCases_layout"
                app:cardElevation="2dp"
                app:cardCornerRadius="3dp">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rect_plain">
                    <TextView
                        android:id="@+id/tv_fecompletecases"
                        android:text="100"
                        android:textSize="34dp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:background="#e2e2e2"
                        android:text="COMPLETED CASES"
                        android:textSize="14sp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:tint="@color/colorAccent"
                        android:padding="10dp"
                        android:layout_gravity="right"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_event_available_black_24dp"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginRight="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="3dp">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rect_plain">
                    <TextView
                        android:id="@+id/tv_completedcases"
                        android:text="100"
                        android:textSize="34dp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:background="#e2e2e2"
                        android:text="CLOSED CASES"
                        android:textSize="14sp"
                        android:textColor="@color/edittext_textcolor"
                        android:layout_gravity="bottom|center_horizontal"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:tint="@color/colorAccent"
                        android:padding="10dp"
                        android:layout_gravity="right"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_event_available_black_24dp"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

